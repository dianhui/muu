<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/scv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <ImageView
            android:id="@+id/imv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/content_img"
            android:clickable="true"
            android:contentDescription="@string/book_content" />
                
    </ScrollView>
    
    <RelativeLayout
        android:id="@+id/rl_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@drawable/action_bar_bg" >
        
        <ImageButton
            android:id="@+id/img_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/back_icon"
            android:contentDescription="@drawable/back_icon"
            />
        
        <TextView
            android:id="@+id/tv_title"
            style="@style/ActionBarTitleTextAppearence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/book_name" />
        
        <ImageButton
            android:id="@+id/imv_btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/share_btn"
            android:contentDescription="@string/share_content_des" />
        
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rl_page_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/page_idx_bg"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_chapter"
            style="@style/PageIdxAppearence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/chapter" />

        <TextView
            android:id="@+id/tv_page_idx"
            style="@style/PageIdxAppearence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_chapter"
            android:text="@string/page" />
    </RelativeLayout>

