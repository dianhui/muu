<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_chapter_list_item"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/rl_storage_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/tv_storage_name"
            style="@style/SelectPathMainTextAppearence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:paddingBottom="5dp"
            />

        <TextView
            android:id="@+id/tv_storage_path"
            style="@style/SelectPathSubTextAppearence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:layout_below="@id/tv_storage_name" />
    </RelativeLayout>
    
    <CheckBox 
        android:id="@+id/chek_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:clickable="false"
        />

</RelativeLayout>
